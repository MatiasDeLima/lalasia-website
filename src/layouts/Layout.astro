---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

	<link href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css" rel="stylesheet"/>

    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>

  @font-face {
    font-family: Eudoxus-Bold;
    src: url(/fonts/EudoxusSans-Bold.ttf);
  }

  @font-face {
    font-family: Eudoxus-Medium;
    src: url(/fonts/EudoxusSans-Medium.ttf);
  }

  @font-face {
    font-family: Eudoxus-Regular;
    src: url(/fonts/EudoxusSans-Regular.ttf);
  }

  :root {
	--header-height: 4.5rem;
    /* Colors */
    --first-color: hsl(175, 24%, 42%);
    --second-color: hsl(36, 100%, 62%);
    --title-color: hsl(45, 11%, 7%);
    --text-color: hsl(255, 5%, 69%);
    --body-color: hsl(0, 0%, 100%);
    --border-color: hsl(0, 0%, 95%);

    /* Typograph */
    --body-font: Eudoxus-Bold;
    --biggest-font-size: 2rem;
    --h1-font-size: 1.5rem;
    --h2-font-size: 1.25rem;
    --h3-font-size: 1rem;
    --normal-font-size: 0.875rem;
    --small-font-size: 0.75rem;
    --smaller-font-size: 0.675rem;

    --font-regular: 400;
    --font-medium: 500;
    --font-bold: 700;

    --z-tooltip: 10;
    --z-fixed: 100;
    --z-modal: 1000;
  }

  /* Responsive typography */
  @media screen and (min-width: 1024px) {
    :root {
      --biggest-font-size: 4rem;
      --h1-font-size: 2.25rem;
      --h2-font-size: 1.5rem;
      --h3-font-size: 1.25rem;
      --normal-font-size: 1rem;
      --small-font-size: 0.875rem;
      --smaller-font-size: 0.813rem;
    }
  }

  .title {
	font-weight: var(--font-regular);
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  ul {
    list-style: none;
  }

  a {
    text-decoration: none;
  }

  img {
    max-width: 100%;
    height: auto;
  }

  button,
  input {
    outline: none;
    border: none;
  }

  button {
    cursor: pointer;
    font-family: var(--body-font);
    font-size: var(--normal-font-size);
  }

  h1,
  h2,
  h3 {
    font-weight: var(--font-bold);
    font-family: Eudoxus-Bold;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    font-family: var(--body-font);
    background-color: var(--body-color);
    color: var(--text-color);
    font-size: var(--normal-font-size);
  }

  main {
    overflow: hidden;
  }

  .section {
    padding-block: 4.5rem 2rem;
  }

  .container {
    max-width: 1120px;
    margin-inline: 1.5rem;
  }

  .grid {
    display: grid;
  }
</style>
