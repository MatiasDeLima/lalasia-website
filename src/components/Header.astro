---


<header class="header" >
  <nav class="nav container">
    <a href="/" class="nav__logo">
      <img src="/images/logo-icon.svg" /> Lalasia
    </a>

    <div class="nav__menu" id="nav-menu">
      <ul class="nav__list">
        <li class="nav__item">
          <a href="#" class="nav__link">Product</a>
        </li>

        <li class="nav__item">
          <a href="#" class="nav__link">Services</a>
        </li>

        <li class="nav__item">
          <a href="#" class="nav__link">Article</a>
        </li>

        <li class="nav__item">
          <a href="#" class="nav__link">About Us</a>
        </li>
      </ul>

      <div class="nav__close" id="nav-close">
        <i class="ri-close-line"></i>
      </div>
    </div>

    <div class="nav__buttons">
      <div class="nav__bag">
        <i class="ri-shopping-bag-line"></i>
      </div>

      <div class="nav__profile">
        <i class="ri-user-line"></i>
      </div>

      <div class="nav__toggle" id="nav-toggle">
        <i class="ri-menu-line"></i>
      </div>
    </div>
  </nav>
</header>

<style>
  .header {
    width: 100%;
    top: 0;
    left: 0;
    background-color: transparent;
    z-index: var(--z-fixed);
    border: 1px solid var(--border-color);
  }

  .nav {
    height: var(--header-height);
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .nav__logo {
    display: inline-flex;
    align-items: center;
    column-gap: 0.25rem;
    font-size: 1.25rem;
    color: var(--title-color);
  }

  .nav__logo img {
    width: 32px;
  }

  .nav__buttons {
    display: flex;
    align-items: center;
    column-gap: 1rem;
  }

  .nav__toggle,
  .nav__bag,
  .nav__profile {
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    color: var(--title-color);
    font-size: 1.25rem;
  }

  @media screen and (max-width: 768px) {
    .nav__menu {
      position: fixed;
      top: 0;
      right: -100%;
      width: 80%;
      height: 100%;
      background-color: var(--body-color);
      padding: 8rem 2.5rem 2rem;
      box-shadow: 0 4px 12px 0 rgba(175, 173, 181, 0.164);
      transition: right 0.4s;
      z-index: var(--z-fixed);
    }
  }

  .nav__list {
    display: flex;
    flex-direction: column;
    row-gap: 3rem;
  }

  .nav__link {
    color: var(--title-color);
    font-size: var(--normal-font-size);
    transition: color 0.3s;
  }

  .nav__link:hover {
    color: var(--first-color);
  }

  .nav__close {
    cursor: pointer;
    position: absolute;
    color: var(--title-color);
    font-size: 1.5rem;
    top: 1.25rem;
    right: 1.25rem;
  }
</style>
